{% extends 'base.html.twig' %}

{% block body %}
    <h1>Creation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ creation.id }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if creation.dateCreation %}{{ creation.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('document_creation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('document_creation_edit', { 'id': creation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
