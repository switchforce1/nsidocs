{% extends 'base.html.twig' %}

{% block body %}
    <h1>Acce</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ acce.id }}</td>
            </tr>
            <tr>
                <th>Dateattribution</th>
                <td>{% if acce.dateAttribution %}{{ acce.dateAttribution|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if acce.actif %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acteurs_acces_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('acteurs_acces_edit', { 'id': acce.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
