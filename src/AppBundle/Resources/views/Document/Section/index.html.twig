{% extends 'AppBundle:Templates:template.html.twig' %}

{% block main_content %}
    <h1>Sections list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td><a href="{{ path('document_section_show', { 'id': section.id }) }}">{{ section.id }}</a></td>
                <td>{{ section.numero }}</td>
                <td>{{ section.libelle }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('document_section_show', { 'id': section.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('document_section_edit', { 'id': section.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('document_section_new') }}">Create a new section</a>
        </li>
    </ul>
{% endblock %}
