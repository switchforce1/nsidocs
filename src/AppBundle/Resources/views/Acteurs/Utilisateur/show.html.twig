{% extends 'AppBundle:Templates:template.html.twig' %}

{% block main_content %}
    <h1>Utilisateur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ utilisateur.login }}</td>
            </tr>
            <tr>
                <th>Motdepass</th>
                <td>{{ utilisateur.motDePass }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{% if utilisateur.etat %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acteurs_utilisateur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('acteurs_utilisateur_edit', { 'id': utilisateur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
