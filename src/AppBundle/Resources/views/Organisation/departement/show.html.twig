{% extends 'AppBundle:Templates:template.html.twig' %}

{% block main_content %}
    <h1>Departement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departement.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ departement.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ departement.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('organisation_departement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('organisation_departement_edit', { 'id': departement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
